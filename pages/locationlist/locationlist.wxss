/* pages/locationlist/locationlist.wxss */
.container .brand_item{
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 5px;
    border-top: 1px solid #e4e4e4;
    border-bottom: 1px solid #e4e4e4;
}
.container .brand_item .pic{
    display: block;
    width: 100px;
    height: 100px;
    border-radius:100%;
}
.right_cont{
    flex: 1;
    padding-left: 10px;
}
.right_cont .name{
    display: block;
    text-align:left;
    font-weight: bold;
}
.right_cont .location{
    margin: 10px 0;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    color: #333;
    font-size: 30rpx;
    display:block;
}
