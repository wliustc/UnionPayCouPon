/**启动页面style**/
.welcome{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  color: black;
  text-align: center;
  font-weight: bold;
  background-color:  #fff;
  background-size: cover;
}
.welcome image{
  width: 200px;
  height: 100px;
  margin-top: 40%;
}
.welcome .title,.welcome .slogan{
  margin:1rem auto;
}
.welcome image,.welcome .title,.welcome .slogan{
  transform: translateY(-30px);
  opacity: 0;
}
.welcome .title{
  font-size: 2rem;
}
.welcome .slogan{
  width: 80%;
  padding: 5px 0;
  font-size: 1.4rem;
  font-family: "楷体";
  border-top: 1px solid #000;
  border-bottom: 1px solid #000;
}